<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TpPdmFinal.View.Create">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="mercName" Placeholder="Nome da Mercadoria" />
            <Entry x:Name="mercHeight" Placeholder="Peso da Mercadoria" />
            <Entry x:Name="prodName" Placeholder="Nome do Produtor" />
            <Entry x:Name="prodEmail" Placeholder="E-mail do Produtor" />
            <Entry x:Name="NCM" Placeholder="NCM" />

            <Button x:Name="mercSave" Text="Salvar" Clicked="OnSave"/>
            <Button x:Name="mercAbort" Text="Cancelar" Clicked="OnCancel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>