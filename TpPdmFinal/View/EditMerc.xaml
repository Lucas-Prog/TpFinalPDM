<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TpPdmFinal.View.EditMerc">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Nome do Produto" FontSize="10"/>
                <Entry x:Name="lblName" FontSize="25"/>
            </StackLayout>

            <StackLayout Margin="10">
                <Label Text="Peso do Produto" FontSize="10"/>
                <Entry x:Name="lblPeso" FontSize="25" Keyboard="Numeric"/>
            </StackLayout>

            <StackLayout Margin="10">
                <Label Text="Nome do Produtor" FontSize="10"/>
                <Entry x:Name="lblProdName" FontSize="25"/>
            </StackLayout>

            <StackLayout Margin="10">
                <Label Text="E-mail do Produtor" FontSize="10"/>
                <Entry x:Name="lblProdEmail" FontSize="25"/>
            </StackLayout>

            <StackLayout Margin="10">
                <Label Text="NCM" FontSize="10"/>
                <Entry x:Name="lblNCM" FontSize="25"/>
            </StackLayout>

            <StackLayout>
                <Button Text="Salvar" Clicked="OnSaveClicked"/>
                <Button Text="Cancelar" Clicked="OnCancelClicked"/>
            </StackLayout>
        </StackLayout>        
    </ContentPage.Content>
</ContentPage>